/* pages/music-player/index.wxss */
page{               
  color:#fff;
  padding:0 20rpx;
}
.content .music{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.bg-image,.bg-cover{
  position: fixed;
  left: 0;
  top: 0;
  width:100%;
  height: 100%;
  z-index:-1;
}
.bg-cover{
  background-color: rgba(0,0,0,.5);
  backdrop-filter: blur(20px);
}
.tab{
  font-size: 24rpx;
  color:#999;
}
.tab .divider{
  margin:0 10rpx;
}
.tab .active{
  color: #fff;
}
.operate{
  padding-bottom:50rpx;
}
.operate image{
  width:80rpx;
  height:80rpx;
}
.info view{
  margin:18rpx 0;
}
.songName{
  font-size: 40rpx;
  font-weight: bold;
}
.songAuthor,.songAlia{
  font-size: 24rpx;
}
.lyric{
  text-align: center;
}
.operate{
  display: flex;
  justify-content: space-between;
}
.album{
  text-align: center;
}