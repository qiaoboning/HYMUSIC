/* components/nav-bar/index.wxss */
.nav-bar{
  display: flex;
  text-align: center;
}
.left,.right{
  width:120rpx;
}
.center{
  flex:1;
}
.left-arrow{
  display: none;
}
.left-arrow .icon{
  width:50rpx;
  vertical-align: middle;
}
.left-slot:empty + .left-arrow{
  display: block;
}
.center-title{
  display: none;
}
.center-slot:empty + .center-title{
  display: block;
}