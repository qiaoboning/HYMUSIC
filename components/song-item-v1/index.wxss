/* components/song-item-v1/index.wxss */
.song-item-v1{
  width:100%;
  /* height:160rpx; */
  /* padding:50rpx 0; */
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  box-sizing: border-box;
  margin:36rpx 0;
}
.song-item-v1 .song-info{
  width:70%;
  display: flex;
}
.desc{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.desc text{
  display: block
}
.desc text:first-child{
  font-size: 16px;
}
.song-item-v1 .song-info image{
  width:100rpx;
  height:100rpx;
  margin-right:20rpx;
  border-radius: 10rpx;
}
.arrow{
  width:60rpx;
  height:60rpx;
  margin-top: 24rpx;
}